{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "conversational_context_bundle.schema",
  "schema_id": "schema.operations.conversational_context_bundle",
  "version": "1.0.0",
  "title": "Conversational Context Bundle Schema",
  "type": "object",
  "owners": {
    "accountable": "Governance Lead",
    "responsible": [
      "Core Maintainer"
    ]
  },
  "review": {
    "frequency": "12 months"
  },
  "description": "Validates conversational_context_bundle_schema.yaml",
  "additionalProperties": false,
  "required": [
    "id",
    "version",
    "kind",
    "created_at",
    "origin",
    "scope",
    "symbols",
    "policies"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "draft",
        "deprecated",
        "experimental"
      ]
    },
    "schema_id": {
      "type": "string",
      "const": "schema.operations.conversational_context_bundle"
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "kind": {
      "type": "string",
      "enum": [
        "conversational_context_bundle"
      ]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "origin": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "topic",
        "source"
      ],
      "properties": {
        "irritation_id": {
          "type": [
            "string",
            "null"
          ]
        },
        "topic": {
          "type": "string"
        },
        "source": {
          "type": "string",
          "enum": [
            "human",
            "test",
            "check",
            "agent",
            "system"
          ]
        }
      }
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "repo_root"
      ],
      "properties": {
        "repo_root": {
          "type": "string"
        },
        "main_command": {
          "type": [
            "string",
            "null"
          ]
        },
        "run_id": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "symbols": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "file"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "file": {
            "type": "string"
          },
          "capability": {
            "type": [
              "string",
              "null"
            ]
          },
          "id": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "policies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "runtime_artifacts": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "properties": {
        "logs": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "path",
              "excerpt"
            ],
            "properties": {
              "path": {
                "type": "string"
              },
              "excerpt": {
                "type": "string"
              }
            }
          }
        },
        "audits": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "path",
              "summary"
            ],
            "properties": {
              "path": {
                "type": "string"
              },
              "summary": {
                "type": "string"
              }
            }
          }
        },
        "tests": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "name",
              "output"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "output": {
                "type": [
                  "string",
                  "null"
                ]
              }
            }
          }
        }
      }
    },
    "notes": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "required": [
        "suspected_violations",
        "remarks"
      ],
      "properties": {
        "suspected_violations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "remarks": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
