{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "standard.architecture.dependency_injection",
  "version": "1.0.0",
  "title": "Architecture Standard \u2013 Dependency Injection",
  "description": "Validates dependency_injection.yaml with constitutional rigor and structural flexibility",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "type",
    "status",
    "owners",
    "review",
    "schema_id",
    "policy_id",
    "purpose",
    "scope",
    "rules"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "draft",
        "deprecated",
        "experimental"
      ]
    },
    "owners": {
      "type": "object",
      "required": [
        "accountable"
      ],
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "review": {
      "type": "object",
      "required": [
        "frequency"
      ],
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "type": "string",
          "format": "date"
        },
        "next_review_due": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference"
    },
    "type": {
      "type": "string",
      "enum": [
        "standard_architecture"
      ]
    },
    "schema_id": {
      "type": "string",
      "const": "standard.architecture.dependency_injection"
    },
    "policy_id": {
      "type": "string"
    },
    "purpose": {
      "type": "string",
      "minLength": 10
    },
    "scope": {
      "type": "object",
      "properties": {
        "paths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "paths"
      ],
      "additionalProperties": false
    },
    "rules": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "statement": {
                "type": "string",
                "minLength": 10
              },
              "enforcement": {
                "type": "string"
              },
              "scope": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              },
              "exclusions": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              },
              "forbidden_instantiations": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              }
            },
            "required": [
              "id",
              "statement",
              "enforcement",
              "scope",
              "exclusions",
              "forbidden_instantiations"
            ],
            "additionalProperties": false,
            "description": "Variant with fields: enforcement, exclusions, forbidden_instantiations, id, scope, statement"
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "statement": {
                "type": "string",
                "minLength": 10
              },
              "enforcement": {
                "type": "string"
              },
              "scope": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              },
              "forbidden_imports": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              }
            },
            "required": [
              "id",
              "statement",
              "enforcement",
              "scope",
              "forbidden_imports"
            ],
            "additionalProperties": false,
            "description": "Variant with fields: enforcement, forbidden_imports, id, scope, statement"
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "statement": {
                "type": "string",
                "minLength": 10
              },
              "enforcement": {
                "type": "string"
              },
              "scope": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              }
            },
            "required": [
              "id",
              "statement",
              "enforcement",
              "scope"
            ],
            "additionalProperties": false,
            "description": "Variant with fields: enforcement, id, scope, statement"
          }
        ]
      },
      "minItems": 1
    }
  },
  "additionalProperties": false,
  "id": "dependency_injection.schema",
  "owners": {
    "accountable": "Governance Lead"
  },
  "review": {
    "frequency": "12 months"
  }
}
