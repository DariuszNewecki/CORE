{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://core.local/schemas/core/action_result_schema.json",
  "title": "ActionResult Universal Contract",
  "description": "Constitutional schema for the return value of ... atomic actions. Ensures consistent inter-agent communication.",
  "type": "object",
  "required": [
    "action_id",
    "ok",
    "data",
    "duration_ms",
    "timestamp",
    "meta"
  ],
  "properties": {
    "action_id": {
      "type": "string",
      "description": "The action identifier that produced this result."
    },
    "ok": {
      "type": "boolean",
      "description": "True if action succeeded, false otherwise."
    },
    "data": {
      "type": "object",
      "description": "Payload data produced by the action.",
      "additionalProperties": true
    },
    "duration_ms": {
      "type": "number",
      "minimum": 0,
      "description": "Execution time in milliseconds."
    },
    "timestamp": {
      "type": "string",
      "description": "ISO-8601 timestamp when result was produced."
    },
    "meta": {
      "type": "object",
      "description": "Metadata about execution context.",
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "id": "action_result.schema",
  "version": "1.0.0",
  "owners": {
    "accountable": "Governance Lead"
  },
  "review": {
    "frequency": "12 months"
  },
  "schema_id": "action_result.schema"
}