{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "standard.architecture.agent_governance",
  "version": "1.0.0",
  "title": "Architecture Standard \u2013 Agent Governance",
  "description": "Validates agent_governance.yaml with constitutional rigor and structural flexibility",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "type",
    "status",
    "owners",
    "review",
    "schema_id",
    "purpose",
    "agent_rules",
    "autonomy_lanes",
    "planner_actions",
    "resource_selection"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "draft",
        "deprecated",
        "experimental"
      ]
    },
    "owners": {
      "type": "object",
      "required": [
        "accountable"
      ],
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "review": {
      "type": "object",
      "required": [
        "frequency"
      ],
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "type": "string",
          "format": "date"
        },
        "next_review_due": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference"
    },
    "type": {
      "type": "string",
      "enum": [
        "standard_architecture"
      ]
    },
    "schema_id": {
      "type": "string",
      "const": "standard.architecture.agent_governance"
    },
    "purpose": {
      "type": "string",
      "minLength": 10
    },
    "agent_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "statement": {
            "type": "string"
          },
          "enforcement": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "statement",
          "enforcement"
        ],
        "additionalProperties": false
      },
      "minItems": 1
    },
    "autonomy_lanes": {
      "type": "object",
      "properties": {
        "micro_proposals": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "allowed_actions": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "velocity_limits": {
              "type": "object",
              "properties": {
                "max_proposals_per_hour": {
                  "type": "integer"
                },
                "max_files_per_day": {
                  "type": "integer"
                },
                "breach_behavior": {
                  "type": "string"
                }
              },
              "required": [
                "max_proposals_per_hour",
                "max_files_per_day",
                "breach_behavior"
              ],
              "additionalProperties": false
            },
            "safe_paths": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "forbidden_paths": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          },
          "required": [
            "description",
            "allowed_actions",
            "velocity_limits",
            "safe_paths",
            "forbidden_paths"
          ],
          "additionalProperties": false
        },
        "full_amendments": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "requires": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          },
          "required": [
            "description",
            "requires"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "micro_proposals",
        "full_amendments"
      ],
      "additionalProperties": false
    },
    "planner_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "parameters": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "type"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "applies_to": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "examples": {
                  "type": "array"
                },
                "implementation_requirements": {},
                "structure": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "signature": {
                  "type": "object"
                },
                "guarantees": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "parameters": {},
                "exit_codes": {
                  "type": "object"
                },
                "architecture": {
                  "type": "object"
                },
                "example_implementation": {
                  "type": "string"
                },
                "characteristics": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "example_skeleton": {
                  "type": "string"
                },
                "order": {
                  "type": "object"
                },
                "reasoning": {
                  "type": "string"
                },
                "violation_example": {
                  "type": "string"
                },
                "correct_example": {
                  "type": "string"
                },
                "fix": {
                  "type": "object"
                }
              },
              "additionalProperties": true
            },
            "minItems": 1
          }
        },
        "required": [
          "name",
          "description",
          "parameters"
        ],
        "additionalProperties": false
      },
      "minItems": 1
    },
    "resource_selection": {
      "type": "object",
      "properties": {
        "scoring_weights": {
          "type": "object",
          "properties": {
            "cost": {
              "type": "number"
            },
            "speed": {
              "type": "number"
            },
            "quality": {
              "type": "number"
            },
            "reasoning": {
              "type": "number"
            }
          },
          "required": [
            "cost",
            "speed",
            "quality",
            "reasoning"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "scoring_weights"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "id": "agent_governance.schema",
  "owners": {
    "accountable": "Governance Lead"
  },
  "review": {
    "frequency": "12 months"
  }
}
