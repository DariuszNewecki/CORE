{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "meta.meta_schema",
  "version": "1.1.2",
  "title": "CORE META Schema Validation Schema",
  "description": "Validates the structure of JSON Schema files stored under .intent/META/*.schema.json. META schema files are JSON Schemas and must not be validated as constitutional/policy/standard documents.",
  "type": "object",
  "additionalProperties": true,
  "allOf": [
    {
      "$ref": "./header.schema.json"
    },
    {
      "type": "object",
      "required": [
        "$schema",
        "schema_id",
        "version",
        "title",
        "description",
        "type"
      ],
      "properties": {
        "$schema": {
          "type": "string",
          "minLength": 10
        },
        "schema_id": {
          "type": "string",
          "pattern": "^[a-z0-9_.-]+$"
        },
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "title": {
          "type": "string",
          "minLength": 3,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "minLength": 10
        },
        "type": {
          "type": "string",
          "enum": [
            "array",
            "boolean",
            "integer",
            "null",
            "number",
            "object",
            "string"
          ]
        },
        "properties": {
          "type": "object",
          "additionalProperties": true
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "additionalProperties": {
          "type": [
            "boolean",
            "object"
          ]
        },
        "$ref": {
          "type": "string"
        },
        "allOf": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "anyOf": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "oneOf": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "definitions": {
          "type": "object"
        },
        "$id": {
          "type": "string"
        }
      }
    }
  ]
}