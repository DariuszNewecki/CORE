{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "schema.registry",
  "version": "2.0.0",
  "title": "CORE Intent Registry Schema",
  "description": "Schema defining the allowed top-level intent domains and their structural classification for dynamic discovery.",
  "type": "object",
  "schema_id": "schema.registry",
  "owners": {
    "accountable": "Governance Lead",
    "responsible": [
      "Core Maintainer"
    ]
  },
  "review": {
    "frequency": "12 months"
  },
  "allOf": [
    {
      "$ref": "./header.schema.json"
    },
    {
      "type": "object",
      "required": [
        "type",
        "domains"
      ],
      "properties": {
        "type": {
          "type": "string",
          "const": "meta_registry"
        },
        "domains": {
          "type": "array",
          "minItems": 1,
          "description": "Declared intent domains recognized by CORE. Presence of files on disk determines actual activation.",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "id",
              "description",
              "kind"
            ],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z][a-z0-9_]*$"
              },
              "description": {
                "type": "string",
                "minLength": 10
              },
              "kind": {
                "type": "string",
                "enum": [
                  "constitution",
                  "policy",
                  "standard",
                  "schema",
                  "mind",
                  "extension"
                ]
              },
              "path_hint": {
                "type": "string",
                "description": "Optional relative path hint for discovery. Not authoritative."
              }
            }
          }
        },
        "notes": {
          "type": "string"
        }
      }
    }
  ]
}
