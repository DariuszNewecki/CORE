{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "schema.policy",
  "version": "1.2.0",
  "title": "CORE Policy Schema",
  "description": "Schema defining a CORE policy document composed of one or more enforceable rules.",
  "type": "object",
  "schema_id": "schema.policy",
  "owners": {
    "accountable": "Governance Lead",
    "responsible": [
      "Core Maintainer"
    ]
  },
  "review": {
    "frequency": "12 months"
  },
  "allOf": [
    {
      "$ref": "./header.schema.json"
    },
    {
      "type": "object",
      "required": [
        "type",
        "rules"
      ],
      "properties": {
        "type": {
          "type": "string",
          "const": "policy"
        },
        "scope": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "paths": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "excludes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "rules": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "rule.schema.json"
          }
        },
        "aggregates": {
          "type": "array",
          "description": "Optional references to other policy documents for meta-policy composition.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  ]
}
