{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "schema.standard",
  "version": "1.1.0",
  "title": "CORE Standard Schema",
  "description": "Schema defining a CORE standard document providing guidance and optional enforceable rules.",
  "type": "object",
  "schema_id": "schema.standard",
  "owners": {
    "accountable": "Governance Lead",
    "responsible": [
      "Core Maintainer"
    ]
  },
  "review": {
    "frequency": "12 months"
  },
  "allOf": [
    {
      "$ref": "./header.schema.json"
    },
    {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "const": "standard"
        },
        "scope": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "paths"
          ],
          "properties": {
            "paths": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "excludes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "requirements": {
          "type": "array",
          "description": "Non-enforceable guidance statements and best practices.",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "id",
              "description"
            ],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z][a-z0-9_]*(\\.[a-z0-9_]+)*$"
              },
              "description": {
                "type": "string",
                "minLength": 10
              },
              "rationale": {
                "type": "string",
                "minLength": 10
              }
            }
          }
        },
        "rules": {
          "type": "array",
          "description": "Optional enforceable rules associated with this standard.",
          "items": {
            "$ref": "./rule.schema.json"
          }
        },
        "references": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notes": {
          "type": "string"
        }
      }
    }
  ]
}
