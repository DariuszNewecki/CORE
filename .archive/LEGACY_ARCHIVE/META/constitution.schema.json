{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "meta.constitution",
  "version": "1.1.2",
  "title": "CORE Constitution Schema",
  "description": "Validates constitutional documents under .intent/constitution/. Enforces domain-specific structure and principles.",
  "type": "object",
  "schema_id": "meta.constitution",
  "owners": {
    "accountable": "Governance Lead",
    "responsible": [
      "Core Maintainer"
    ]
  },
  "review": {
    "frequency": "12 months"
  },
  "additionalProperties": true,
  "required": [
    "domain",
    "principles"
  ],
  "properties": {
    "domain": {
      "type": "string",
      "enum": [
        "authority",
        "boundaries",
        "risk",
        "precedence"
      ],
      "description": "The constitutional governance domain."
    },
    "principles": {
      "type": "object",
      "description": "Dictionary of constitutional principles. Each principle is an enforceable rule.",
      "minProperties": 1,
      "patternProperties": {
        "^[a-z][a-z0-9_]*$": {
          "$ref": "rule.schema.json"
        }
      },
      "additionalProperties": false
    }
  }
}