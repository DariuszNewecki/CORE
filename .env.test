# .env.test
# Configuration for the testing environment, loaded by pytest-dotenv.

# --- PostgreSQL Test Database ---
# Use a different database name (e.g., 'testdb') to isolate tests
# from your development 'core' database.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=testdb
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/testdb

# --- Other Test Settings ---
# You can override other settings here if needed for tests
LOG_LEVEL=INFO
LLM_ENABLED=false
