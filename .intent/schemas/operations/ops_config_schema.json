{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "schema.operations.config",
  "version": "1.0.0",
  "title": "Operations Configuration Schema",
  "description": "Validates config_schema.yaml",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "type",
    "status",
    "owners",
    "review",
    "schema_id",
    "git"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "draft",
        "deprecated",
        "experimental"
      ]
    },
    "owners": {
      "type": "object",
      "required": [
        "accountable"
      ],
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "review": {
      "type": "object",
      "required": [
        "frequency"
      ],
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "type": "string",
          "format": "date"
        },
        "next_review_due": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference"
    },
    "type": {
      "type": "string",
      "enum": [
        "schema_operations_config"
      ]
    },
    "schema_id": {
      "type": "string",
      "const": "schema.operations.config"
    },
    "git": {
      "type": "object",
      "properties": {
        "ignore_validation": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "default": {
              "type": "boolean"
            },
            "description": {
              "type": "string",
              "minLength": 10
            }
          },
          "required": [
            "type",
            "default",
            "description"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "ignore_validation"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "id": "config.schema",
  "owners": {
    "accountable": "Governance Lead"
  },
  "review": {
    "frequency": "12 months"
  }
}
