{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://core.local/schemas/core/action_result_schema.json",
  "title": "ActionResult Universal Contract",
  "description": "Constitutional schema for the return value of ALL atomic actions. Ensures consistent inter-agent communication.",
  "type": "object",
  "required": ["action_id", "ok", "data", "duration_sec"],
  "properties": {
    "action_id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+\\.[a-z0-9_]+$",
      "description": "Unique identifier for the action (e.g. 'fix.ids')."
    },
    "ok": {
      "type": "boolean",
      "description": "Binary success indicator."
    },
    "data": {
      "type": "object",
      "description": "Structured return data. MUST be a dictionary, never a list or scalar.",
      "maxProperties": 100
    },
    "duration_sec": {
      "type": "number",
      "minimum": 0
    },
    "impact": {
      "type": "string",
      "enum": ["read-only", "write-metadata", "write-code", "write-data"],
      "description": "The declared side-effect category of this action."
    },
    "logs": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Debug or trace logs generated during execution."
    },
    "warnings": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Non-fatal issues encountered."
    },
    "suggestions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Recommended follow-up actions."
    }
  },
  "additionalProperties": false
}
