{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Enforcement Model Policy",
  "description": "Schema for defining the canonical enforcement levels for all policies.",
  "type": "object",
  "required": ["enforcement_levels"],
  "properties": {
    "enforcement_levels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["level", "description"],
        "properties": {
          "level": {
            "type": "string",
            "enum": ["hard", "soft", "manual_review"]
          },
          "description": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": false
}