{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "constitution.boundaries",
  "version": "1.0.0",
  "title": "Constitutional Boundaries Schema",
  "description": "Validates the structure of boundaries.yaml - defines immutable constitutional boundaries and separation of concerns.",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "type",
    "status",
    "owners",
    "review",
    "schema_id",
    "domain",
    "principles"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "type": {
      "type": "string",
      "enum": [
        "constitutional_boundaries"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "draft",
        "deprecated",
        "experimental"
      ]
    },
    "owners": {
      "type": "object",
      "required": [
        "accountable"
      ],
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "review": {
      "type": "object",
      "required": [
        "frequency"
      ],
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "type": "string",
          "format": "date"
        },
        "next_review_due": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false
    },
    "schema_id": {
      "type": "string",
      "const": "constitution.boundaries"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference"
    },
    "domain": {
      "type": "string",
      "const": "boundaries"
    },
    "principles": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[a-z][a-z0-9_]*$": {
          "type": "object",
          "required": [
            "statement",
            "rationale",
            "scope",
            "enforcement"
          ],
          "properties": {
            "statement": {
              "type": "string",
              "minLength": 10,
              "maxLength": 200
            },
            "rationale": {
              "type": "string",
              "minLength": 10,
              "maxLength": 500
            },
            "scope": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "enforcement": {
              "type": "object",
              "required": [
                "method",
                "parameters"
              ],
              "properties": {
                "method": {
                  "type": "string",
                  "enum": [
                    "path_match",
                    "action_classification",
                    "boundary_check",
                    "risk_calculation",
                    "audit_verification",
                    "architectural_validation",
                    "layer_boundary_check",
                    "pre_execution_validation",
                    "audit_logging",
                    "execution_context_check",
                    "storage_policy"
                  ]
                },
                "parameters": {
                  "type": "object",
                  "minProperties": 1
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object"
    },
    "references": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false,
  "id": "boundaries.schema",
  "owners": {
    "accountable": "Governance Lead"
  },
  "review": {
    "frequency": "12 months"
  }
}
