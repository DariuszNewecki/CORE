{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "schema.data.policy",
  "title": "Data Policy Schema",
  "type": "object",
  "required": [
    "id",
    "version",
    "rules"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  },
  "additionalProperties": false,
  "id": "policy.schema",
  "version": "1.0.0",
  "owners": {
    "accountable": "Governance Lead"
  },
  "review": {
    "frequency": "12 months"
  }
}
