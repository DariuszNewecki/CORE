{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "schema.rule",
  "version": "2.2.0",
  "title": "CORE Rule Schema",
  "description": "Validates a single rule. Enforces unique IDs and deterministic engine parameters.",
  "type": "object",
  "required": [
    "id",
    "enforcement",
    "statement",
    "rationale",
    "check"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*(\\.[a-z0-9_]+)*$",
      "description": "Unique identifier using snake_case segments separated by dots."
    },
    "enforcement": {
      "type": "string",
      "enum": [
        "error",
        "warn",
        "warning",
        "info"
      ]
    },
    "statement": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500
    },
    "rationale": {
      "type": "string",
      "minLength": 10
    },
    "check": {
      "type": "object",
      "required": [
        "engine"
      ],
      "properties": {
        "engine": {
          "type": "string",
          "enum": [
            "ast_gate",
            "regex_gate",
            "glob_gate",
            "python_handler",
            "llm_gate",
            "knowledge_gate",
            "workflow_gate",
            "risk_gate"
          ]
        },
        "params": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "category": {
      "type": "string"
    },
    "subcategory": {
      "type": "string"
    },
    "scope": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "additionalProperties": true
        }
      ]
    },
    "exceptions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "protected_paths": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "command": {
      "type": "string"
    },
    "metric": {
      "type": "string"
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "cross_reference": {
      "type": "object",
      "additionalProperties": true
    },
    "details": {
      "type": "object",
      "additionalProperties": true
    },
    "applies_when": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "remediation": {
      "type": "string"
    },
    "owner": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
