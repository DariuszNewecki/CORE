{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "meta.constitution",
  "version": "1.0.0",
  "title": "CORE Constitution Schema",
  "description": "Validates CORE constitution documents under .intent/constitution/.",
  "type": "object",
  "additionalProperties": false,
  "allOf": [
    {
      "$ref": "header.schema.json"
    }
  ],
  "required": [
    "type",
    "principles"
  ],
  "properties": {
    "type": {
      "type": "string",
      "const": "constitution"
    },
    "principles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "description"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*(\\.[a-z0-9_]+)*$"
          },
          "description": {
            "type": "string",
            "minLength": 10
          },
          "rationale": {
            "type": "string",
            "minLength": 10
          }
        }
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "$ref": "rule.schema.json"
      }
    },
    "precedence": {
      "type": "string",
      "description": "Optional pointer to a precedence definition document (path or id)."
    }
  },
  "id": "constitution.schema",
  "owners": {
    "accountable": "Governance Lead"
  },
  "review": {
    "frequency": "12 months"
  }
}
