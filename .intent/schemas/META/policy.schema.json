{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "meta.policy",
  "version": "1.0.0",
  "title": "CORE Policy Schema",
  "description": "Validates CORE policy documents under .intent/policies/**. Policies are governed containers of enforceable rules. Presence under .intent implies current law; no status field is used.",
  "type": "object",
  "additionalProperties": false,
  "allOf": [
    { "$ref": "header.schema.json" }
  ],
  "required": ["type", "rules"],
  "properties": {
    "type": {
      "type": "string",
      "const": "policy"
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["paths"],
      "properties": {
        "paths": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "excludes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "rule.schema.json" }
    },
    "notes": {
      "type": "string"
    }
  }
}
