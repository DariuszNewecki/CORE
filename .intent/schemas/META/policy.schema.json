{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "meta.policy",
  "version": "1.1.0",
  "title": "CORE Policy Schema",
  "description": "Validates CORE policy documents. Updated to allow header properties and aggregated policy structures.",
  "type": "object",
  "required": [
    "type",
    "rules"
  ],
  "properties": {
    "type": {
      "type": "string",
      "const": "policy"
    },
    "scope": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "paths": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "excludes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "rule.schema.json"
      }
    },
    "aggregates": {
      "type": "array",
      "description": "Used by meta-policies to link multiple policy files."
    }
  },
  "additionalProperties": true,
  "id": "policy.schema"
}
