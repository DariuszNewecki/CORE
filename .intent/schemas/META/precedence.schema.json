{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "constitution.precedence",
  "version": "1.0.0",
  "title": "CORE Precedence Schema",
  "description": "Validates precedence rules documents used for conflict resolution across constitution, standards, and policies.",
  "type": "object",
  "additionalProperties": false,
  "allOf": [
    { "$ref": "header.schema.json" }
  ],
  "required": ["type", "policy_hierarchy"],
  "properties": {
    "type": {
      "type": "string",
      "const": "precedence"
    },
    "policy_hierarchy": {
      "type": "array",
      "minItems": 1,
      "description": "Ordered precedence levels (lower level number = higher priority).",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["level", "description", "policies"],
        "properties": {
          "level": {
            "type": "integer",
            "minimum": 1
          },
          "description": {
            "type": "string",
            "minLength": 10
          },
          "policies": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^[a-z][a-z0-9_.-]*$"
            },
            "description": "Policy IDs covered by this precedence level."
          }
        }
      }
    },
    "notes": {
      "type": "string"
    }
  }
}
