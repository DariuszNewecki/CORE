{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "constitution.precedence",
  "version": "1.0.0",
  "title": "CORE Precedence Schema",
  "description": "Validates precedence rules documents used for conflict resolution across constitution, standards, and policies.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "version",
    "title",
    "type",
    "owners",
    "review",
    "schema_id",
    "policy_hierarchy"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_.-]*$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "const": "precedence"
    },
    "owners": {
      "type": "object",
      "required": [
        "accountable"
      ],
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "review": {
      "type": "object",
      "required": [
        "frequency"
      ],
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "type": "string"
        },
        "next_review_due": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "schema_id": {
      "type": "string"
    },
    "purpose": {
      "type": "string"
    },
    "policy_hierarchy": {
      "type": "array",
      "minItems": 1,
      "description": "Ordered precedence levels (lower level number = higher priority).",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "level",
          "description",
          "policies"
        ],
        "properties": {
          "level": {
            "type": "integer",
            "minimum": 1
          },
          "description": {
            "type": "string",
            "minLength": 10
          },
          "policies": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^[a-z][a-z0-9_.-]*$"
            },
            "description": "Policy IDs covered by this precedence level."
          }
        }
      }
    },
    "notes": {
      "type": "string"
    }
  }
}
