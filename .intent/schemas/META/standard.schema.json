{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "meta.standard",
  "version": "1.0.0",
  "title": "CORE Standard Schema",
  "description": "Validates CORE standards documents under .intent/standards/.",
  "type": "object",
  "additionalProperties": false,
  "allOf": [
    { "$ref": "header.schema.json" }
  ],
  "required": ["type"],
  "properties": {
    "type": {
      "type": "string",
      "const": "standard"
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["paths"],
      "properties": {
        "paths": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "excludes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "requirements": {
      "type": "array",
      "description": "Optional non-enforceable requirements/guidance statements.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*(\\.[a-z0-9_]+)*$"
          },
          "description": {
            "type": "string",
            "minLength": 10
          },
          "rationale": {
            "type": "string",
            "minLength": 10
          }
        }
      }
    },
    "rules": {
      "type": "array",
      "description": "Optional enforceable rules for standards that must be checked.",
      "items": { "$ref": "rule.schema.json" }
    },
    "references": {
      "type": "array",
      "items": { "type": "string" }
    },
    "notes": {
      "type": "string"
    }
  }
}
