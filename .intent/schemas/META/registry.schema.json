{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "meta.registry",
  "version": "1.0.0",
  "title": "CORE Intent Meta Registry",
  "description": "Validates the CORE intent meta registry document.",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "type",
    "owners",
    "review",
    "schema_id",
    "charter",
    "mind"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "owners": {
      "type": "object",
      "required": [
        "accountable"
      ],
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "review": {
      "type": "object",
      "required": [
        "frequency"
      ],
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "type": "string",
          "format": "date"
        },
        "next_review_due": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "type": {
      "type": "string",
      "enum": [
        "meta_registry"
      ]
    },
    "schema_id": {
      "type": "string",
      "const": "meta.registry"
    },
    "charter": {
      "type": "object",
      "required": [
        "constitution",
        "policies",
        "patterns",
        "schemas"
      ],
      "properties": {
        "constitution": {
          "type": "object"
        },
        "policies": {
          "type": "object"
        },
        "patterns": {
          "type": "object"
        },
        "schemas": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    "mind": {
      "type": "object",
      "required": [
        "project_manifest",
        "northstar",
        "config",
        "ir",
        "knowledge",
        "mind_export",
        "prompts",
        "context"
      ],
      "properties": {
        "project_manifest": {
          "type": "object"
        },
        "northstar": {
          "type": "object"
        },
        "config": {
          "type": "object"
        },
        "ir": {
          "type": "object"
        },
        "knowledge": {
          "type": "object"
        },
        "mind_export": {
          "type": "object"
        },
        "prompts": {
          "type": "object"
        },
        "context": {
          "type": "object"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "id": "registry.schema",
  "owners": {
    "accountable": "Governance Lead"
  },
  "review": {
    "frequency": "12 months"
  }
}
