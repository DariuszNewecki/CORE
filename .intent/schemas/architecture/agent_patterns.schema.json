{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "standard.architecture.agent_patterns",
  "version": "1.0.0",
  "title": "Architecture Standard \u2013 Agent Patterns",
  "description": "Validates agent_patterns.yaml with constitutional rigor and structural flexibility",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "type",
    "status",
    "owners",
    "review",
    "schema_id",
    "description",
    "patterns",
    "agent_communication",
    "constitutional_constraints",
    "testing_agents",
    "migration_checklist"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "draft",
        "deprecated",
        "experimental"
      ]
    },
    "owners": {
      "type": "object",
      "required": [
        "accountable"
      ],
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "review": {
      "type": "object",
      "required": [
        "frequency"
      ],
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "type": "string",
          "format": "date"
        },
        "next_review_due": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference"
    },
    "type": {
      "type": "string",
      "enum": [
        "standard_architecture"
      ]
    },
    "schema_id": {
      "type": "string",
      "const": "standard.architecture.agent_patterns"
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "pattern_id",
          "type",
          "purpose"
        ],
        "properties": {
          "pattern_id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "purpose": {
            "type": "string"
          },
          "applies_to": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": {
            "type": "string"
          },
          "examples": {
            "type": "array"
          },
          "implementation_requirements": {},
          "structure": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "signature": {
            "type": "object"
          },
          "guarantees": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "parameters": {},
          "exit_codes": {
            "type": "object"
          },
          "architecture": {
            "type": "object"
          },
          "example_implementation": {
            "type": "string"
          },
          "characteristics": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "example_skeleton": {
            "type": "string"
          },
          "order": {
            "type": "object"
          },
          "reasoning": {
            "type": "string"
          },
          "violation_example": {
            "type": "string"
          },
          "correct_example": {
            "type": "string"
          },
          "fix": {
            "type": "object"
          }
        },
        "additionalProperties": true
      },
      "minItems": 1
    },
    "agent_communication": {
      "type": "object",
      "properties": {
        "context_package": {
          "type": "object",
          "properties": {
            "purpose": {
              "type": "string"
            },
            "structure": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "usage": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          },
          "required": [
            "purpose",
            "structure",
            "usage"
          ],
          "additionalProperties": false
        },
        "decision_format": {
          "type": "object",
          "properties": {
            "base_structure": {
              "type": "string",
              "minLength": 10
            },
            "specializations": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          },
          "required": [
            "base_structure",
            "specializations"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "context_package",
        "decision_format"
      ],
      "additionalProperties": false
    },
    "constitutional_constraints": {
      "type": "object",
      "properties": {
        "autonomy_lanes": {
          "type": "object",
          "properties": {
            "purpose": {
              "type": "string"
            },
            "levels": {
              "type": "object",
              "properties": {
                "micro_proposals": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                },
                "major_changes": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                },
                "critical_operations": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                }
              },
              "required": [
                "micro_proposals",
                "major_changes",
                "critical_operations"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "purpose",
            "levels"
          ],
          "additionalProperties": false
        },
        "enforcement": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "autonomy_lanes",
        "enforcement"
      ],
      "additionalProperties": false
    },
    "testing_agents": {
      "type": "object",
      "properties": {
        "unit_tests": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "integration_tests": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "evaluation": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "unit_tests",
        "integration_tests",
        "evaluation"
      ],
      "additionalProperties": false
    },
    "migration_checklist": {
      "type": "object",
      "properties": {
        "audit_existing_agents": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "standardization": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "validation": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "audit_existing_agents",
        "standardization",
        "validation"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "id": "agent_patterns.schema",
  "owners": {
    "accountable": "Governance Lead"
  },
  "review": {
    "frequency": "12 months"
  }
}
