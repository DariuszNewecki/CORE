{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "standard.operations.code_execution",
  "version": "1.0.0",
  "title": "Operations Standard \u2013 Code Execution Governance",
  "description": "Validates code_execution.yaml with constitutional rigor and structural flexibility",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "type",
    "status",
    "owners",
    "review",
    "schema_id",
    "philosophy",
    "trust_zones",
    "rules",
    "rationale",
    "migration_notes"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "draft",
        "deprecated",
        "experimental"
      ]
    },
    "owners": {
      "type": "object",
      "required": [
        "accountable"
      ],
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "review": {
      "type": "object",
      "required": [
        "frequency"
      ],
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "type": "string",
          "format": "date"
        },
        "next_review_due": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference"
    },
    "type": {
      "type": "string",
      "enum": [
        "standard_operations"
      ]
    },
    "schema_id": {
      "type": "string",
      "const": "standard.operations.code_execution"
    },
    "philosophy": {
      "type": "string",
      "minLength": 10
    },
    "trust_zones": {
      "type": "object",
      "properties": {
        "system": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "domains": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "rationale": {
              "type": "string"
            }
          },
          "required": [
            "description",
            "domains",
            "rationale"
          ],
          "additionalProperties": false
        },
        "privileged": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "domains": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "rationale": {
              "type": "string"
            }
          },
          "required": [
            "description",
            "domains",
            "rationale"
          ],
          "additionalProperties": false
        },
        "application": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "domains": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "rationale": {
              "type": "string"
            }
          },
          "required": [
            "description",
            "domains",
            "rationale"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "system",
        "privileged",
        "application"
      ],
      "additionalProperties": false
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "severity": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "title",
          "severity",
          "description"
        ],
        "additionalProperties": true
      },
      "minItems": 1
    },
    "rationale": {
      "type": "string",
      "minLength": 10
    },
    "migration_notes": {
      "type": "string",
      "minLength": 10
    }
  },
  "additionalProperties": false,
  "id": "code_execution.schema",
  "owners": {
    "accountable": "Governance Lead"
  },
  "review": {
    "frequency": "12 months"
  }
}
