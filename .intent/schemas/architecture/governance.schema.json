{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "description": "Validates decorator_governance.yaml with constitutional rigor and structural flexibility",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "application_rules": {
      "items": {
        "additionalProperties": true,
        "required": [
          "rule_id",
          "statement"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "autonomous_generation": {
      "additionalProperties": true,
      "properties": {
        "decision_tree": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "actions": {
                "additionalProperties": {
                  "type": "string"
                },
                "type": "object"
              },
              "condition": {
                "type": "string"
              }
            },
            "required": [
              "condition",
              "actions"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "parameter_inference": {
          "additionalProperties": true,
          "type": "object"
        }
      },
      "type": "object"
    },
    "category": {
      "type": "string"
    },
    "enforcement": {
      "additionalProperties": true,
      "type": "object"
    },
    "examples": {
      "additionalProperties": {
        "type": "string"
      },
      "type": "object"
    },
    "id": {
      "pattern": "^[a-z0-9_.-]+$",
      "type": "string"
    },
    "layer": {
      "type": "string"
    },
    "migration": {
      "additionalProperties": true,
      "type": "object"
    },
    "owners": {
      "additionalProperties": false,
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "accountable"
      ],
      "type": "object"
    },
    "philosophy": {
      "type": "string"
    },
    "policy_id": {
      "type": "string"
    },
    "review": {
      "additionalProperties": false,
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "format": "date",
          "type": "string"
        },
        "next_review_due": {
          "format": "date",
          "type": "string"
        }
      },
      "required": [
        "frequency"
      ],
      "type": "object"
    },
    "schema_id": {
      "const": "standard.architecture.decorator_governance",
      "type": "string"
    },
    "status": {
      "enum": [
        "active",
        "draft",
        "deprecated",
        "experimental"
      ],
      "type": "string"
    },
    "storage_strategy": {
      "additionalProperties": true,
      "type": "object"
    },
    "tags": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "title": {
      "maxLength": 200,
      "type": "string"
    },
    "type": {
      "enum": [
        "standard_architecture"
      ],
      "type": "string"
    },
    "version": {
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "type": "string"
    },
    "whitelisted_decorators": {
      "additionalProperties": true,
      "type": "object"
    }
  },
  "required": [
    "id",
    "version",
    "title",
    "type",
    "status",
    "owners",
    "review",
    "schema_id",
    "policy_id",
    "category",
    "layer",
    "philosophy",
    "whitelisted_decorators",
    "application_rules",
    "autonomous_generation",
    "storage_strategy",
    "migration",
    "enforcement",
    "examples"
  ],
  "schema_id": "standard.architecture.decorator_governance.deprecated",
  "title": "Decorator Governance Standard Schema",
  "type": "object",
  "version": "1.0.0",
  "id": "governance.schema",
  "owners": {
    "accountable": "Governance Lead"
  },
  "review": {
    "frequency": "12 months"
  }
}
