{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "standard.architecture.body_contracts",
  "version": "1.0.0",
  "title": "Architecture Standard \u2013 Body Contracts",
  "description": "Validates body_contracts.yaml",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "type",
    "status",
    "owners",
    "review",
    "schema_id",
    "description",
    "scope",
    "headless_rules",
    "write_semantics",
    "action_results",
    "logging",
    "error_handling",
    "side_effects",
    "configuration_access",
    "dependencies",
    "testing_contract",
    "validation_rules"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "draft",
        "deprecated",
        "experimental"
      ]
    },
    "owners": {
      "type": "object",
      "required": [
        "accountable"
      ],
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "review": {
      "type": "object",
      "required": [
        "frequency"
      ],
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "type": "string",
          "format": "date"
        },
        "next_review_due": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference"
    },
    "type": {
      "type": "string",
      "enum": [
        "standard_architecture"
      ]
    },
    "schema_id": {
      "type": "string",
      "const": "standard.architecture.body_contracts"
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "scope": {
      "type": "object",
      "properties": {
        "applies_to": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "applies_to"
      ],
      "additionalProperties": false
    },
    "headless_rules": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "rationale": {
          "type": "string",
          "minLength": 10
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "description",
        "rationale",
        "rules"
      ],
      "additionalProperties": false
    },
    "write_semantics": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "rationale": {
          "type": "string",
          "minLength": 10
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "naming": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "rules": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 10
              },
              "minItems": 1
            }
          },
          "required": [
            "description",
            "rules"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "description",
        "rationale",
        "rules",
        "naming"
      ],
      "additionalProperties": false
    },
    "action_results": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "rationale": {
          "type": "string",
          "minLength": 10
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "examples": {
          "type": "object",
          "properties": {
            "atomic_action": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                },
                "contract": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                }
              },
              "required": [
                "description",
                "contract"
              ],
              "additionalProperties": false
            },
            "helper_function": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                },
                "contract": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                }
              },
              "required": [
                "description",
                "contract"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "atomic_action",
            "helper_function"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "description",
        "rationale",
        "rules",
        "examples"
      ],
      "additionalProperties": false
    },
    "logging": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "rationale": {
          "type": "string",
          "minLength": 10
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "description",
        "rationale",
        "rules"
      ],
      "additionalProperties": false
    },
    "error_handling": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "rationale": {
          "type": "string",
          "minLength": 10
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "exception_hierarchy": {
          "type": "object",
          "properties": {
            "base": {
              "type": "string"
            },
            "categories": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          },
          "required": [
            "base",
            "categories"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "description",
        "rationale",
        "rules",
        "exception_hierarchy"
      ],
      "additionalProperties": false
    },
    "side_effects": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "docstring_expectations": {
          "type": "object",
          "properties": {
            "pure_function": {
              "type": "object",
              "properties": {
                "notes": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                }
              },
              "required": [
                "notes"
              ],
              "additionalProperties": false
            },
            "effectful_function": {
              "type": "object",
              "properties": {
                "notes": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                }
              },
              "required": [
                "notes"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "pure_function",
            "effectful_function"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "description",
        "rules",
        "docstring_expectations"
      ],
      "additionalProperties": false
    },
    "configuration_access": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10
          },
          "minItems": 1
        }
      },
      "required": [
        "description",
        "rules"
      ],
      "additionalProperties": false
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "description",
        "rules"
      ],
      "additionalProperties": false
    },
    "testing_contract": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "description",
        "rules"
      ],
      "additionalProperties": false
    },
    "validation_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "rule": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "severity": {
            "type": "string"
          }
        },
        "required": [
          "rule",
          "description",
          "severity"
        ],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
