{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Runtime Requirements",
  "type": "object",
  "required": ["version", "id", "title", "status", "variables", "owners", "review"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "id": { "const": "runtime_requirements" },
    "title": { "type": "string" },
    "status": { "enum": ["active", "draft", "archived"] },
    "variables": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["description", "source", "required", "type", "used_by"],
        "properties": {
          "description": { "type": "string" },
          "source": { "enum": ["env", "secret", "cli"] },
          "required": { "type": "boolean" },
          "type": { "enum": ["string", "integer", "bool", "enum", "uri", "path"] },
          "allowed": { "type": "array", "items": { "type": "string" } },
          "default": {},
          "pattern": { "type": "string" },
          "minimum": { "type": "number" },
          "used_by": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": true
      }
    },
    "owners": { "type": "object" },
    "review": { "type": "object" }
  },
  "additionalProperties": true
}
