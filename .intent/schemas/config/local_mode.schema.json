{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "config.local_mode",
  "version": "1.0.0",
  "title": "Local Mode Configuration",
  "description": "Validates local_mode.yaml",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "type",
    "status",
    "owners",
    "review",
    "schema_id",
    "mode",
    "apis",
    "dev_fastpath"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "draft",
        "deprecated",
        "experimental"
      ]
    },
    "owners": {
      "type": "object",
      "required": [
        "accountable"
      ],
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "review": {
      "type": "object",
      "required": [
        "frequency"
      ],
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "type": "string",
          "format": "date"
        },
        "next_review_due": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference"
    },
    "type": {
      "type": "string",
      "enum": [
        "config_local_mode"
      ]
    },
    "schema_id": {
      "type": "string",
      "const": "config.local_mode"
    },
    "mode": {
      "type": "string"
    },
    "apis": {
      "type": "object",
      "properties": {
        "llm": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "fallback": {
              "type": "string"
            }
          },
          "required": [
            "enabled",
            "fallback"
          ],
          "additionalProperties": false
        },
        "git": {
          "type": "object",
          "properties": {
            "ignore_validation": {
              "type": "boolean"
            }
          },
          "required": [
            "ignore_validation"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "llm",
        "git"
      ],
      "additionalProperties": false
    },
    "dev_fastpath": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
