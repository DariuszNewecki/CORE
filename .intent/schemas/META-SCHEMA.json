{
  "id": "constitutional_meta_schema",
  "version": "3.1.0",
  "title": "Constitutional Document Validation Schema",
  "type": "schema_constitutional",
  "owners": {
    "accountable": "Governance Lead",
    "responsible": ["Core Maintainer"]
  },
  "review": {
    "frequency": "12 months"
  },
  "schema_id": "schema.constitution.meta",
  "description": "JSON Schema that validates constitutional documents. Every .intent/charter/constitution/*.json file MUST validate against this schema.",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "type",
    "owners",
    "review",
    "schema_id",
    "domain",
    "principles"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^constitutional_[a-z_]+$",
      "description": "Must start with 'constitutional_' followed by domain name"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "type": {
      "type": "string",
      "pattern": "^constitutional_[a-z_]+$",
      "description": "Must match pattern: constitutional_<domain>"
    },
    "owners": {
      "type": "object",
      "required": ["accountable"],
      "properties": {
        "accountable": { "type": "string" },
        "responsible": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "review": {
      "type": "object",
      "required": ["frequency"],
      "properties": {
        "frequency": { "type": "string" },
        "last_reviewed": { "type": "string", "format": "date" },
        "next_review_due": { "type": "string", "format": "date" }
      }
    },
    "schema_id": {
      "type": "string",
      "pattern": "^constitution\\.[a-z]+$",
      "description": "Must be constitution.<domain> (e.g. constitution.authority)"
    },
    "domain": {
      "type": "string",
      "enum": ["authority", "boundaries", "risk", "precedence"],
      "description": "Constitutional domain"
    },
    "principles": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[a-z][a-z0-9_]*$": {
          "type": "object",
          "required": ["statement", "rationale", "scope", "enforcement"],
          "properties": {
            "statement": {
              "type": "string",
              "maxLength": 200
            },
            "rationale": {
              "type": "string",
              "maxLength": 500
            },
            "scope": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string" }
            },
            "enforcement": {
              "type": "object",
              "required": ["method", "parameters"],
              "properties": {
                "method": {
                  "type": "string",
                  "enum": [
                    "path_match",
                    "action_classification",
                    "risk_calculation",
                    "audit_logging",
                    "architectural_validation",
                    "pre_execution_validation",
                    "pattern_validation",
                    "behavioral_verification",
                    "precedence_rule",
                    "layer_boundary_check"
                  ]
                },
                "parameters": {
                  "type": "object",
                  "minProperties": 1
                }
              }
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}