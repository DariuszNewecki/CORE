{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schema_id": "standard.architecture.irritation_heuristic",
  "version": "1.0.0",
  "title": "Architecture Standard \u2013 Irritation Heuristic",
  "description": "Validates irritation_heuristic.yaml",
  "type": "object",
  "required": [
    "id",
    "version",
    "title",
    "type",
    "status",
    "owners",
    "review",
    "schema_id",
    "category",
    "description",
    "intent",
    "motivations",
    "scope",
    "signals",
    "governance",
    "prioritization_rules",
    "actions",
    "risks_and_misuse",
    "relationships",
    "enforcement"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "draft",
        "deprecated",
        "experimental"
      ]
    },
    "owners": {
      "type": "object",
      "required": [
        "accountable"
      ],
      "properties": {
        "accountable": {
          "type": "string"
        },
        "responsible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "review": {
      "type": "object",
      "required": [
        "frequency"
      ],
      "properties": {
        "frequency": {
          "type": "string"
        },
        "last_reviewed": {
          "type": "string",
          "format": "date"
        },
        "next_review_due": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference"
    },
    "type": {
      "type": "string",
      "enum": [
        "standard_architecture"
      ]
    },
    "schema_id": {
      "type": "string",
      "const": "standard.architecture.irritation_heuristic"
    },
    "category": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "intent": {
      "type": "string",
      "minLength": 10
    },
    "motivations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "scope": {
      "type": "object",
      "properties": {
        "applies_to": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "does_not_apply_to": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "applies_to",
        "does_not_apply_to"
      ],
      "additionalProperties": false
    },
    "signals": {
      "type": "object",
      "properties": {
        "human_indicators": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "machine_indicators": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "human_indicators",
        "machine_indicators"
      ],
      "additionalProperties": false
    },
    "governance": {
      "type": "object",
      "properties": {
        "role_permissions": {
          "type": "object",
          "properties": {
            "may_observe": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "may_act_on_signal": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "may_define_or_change_policy": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            }
          },
          "required": [
            "may_observe",
            "may_act_on_signal",
            "may_define_or_change_policy"
          ],
          "additionalProperties": false
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10
          },
          "minItems": 1
        }
      },
      "required": [
        "role_permissions",
        "constraints"
      ],
      "additionalProperties": false
    },
    "prioritization_rules": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "minLength": 10
        },
        "guidelines": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 10
          },
          "minItems": 1
        }
      },
      "required": [
        "description",
        "guidelines"
      ],
      "additionalProperties": false
    },
    "actions": {
      "type": "object",
      "properties": {
        "when_triggered": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "required_metadata": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "when_triggered",
        "required_metadata"
      ],
      "additionalProperties": false
    },
    "risks_and_misuse": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "relationships": {
      "type": "object",
      "properties": {
        "related_patterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "references": {
          "type": "object",
          "properties": {
            "philosophy_doc": {
              "type": "string"
            },
            "architecture_doc": {
              "type": "string"
            }
          },
          "required": [
            "philosophy_doc",
            "architecture_doc"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "related_patterns",
        "references"
      ],
      "additionalProperties": false
    },
    "enforcement": {
      "type": "object",
      "properties": {
        "checks": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "violations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "required": [
        "checks",
        "violations"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
