{
  "id": "code_standards",
  "version": "2.2.0",
  "title": "Code Standards Policy (Aggregated)",
  "type": "policy",
  "schema_id": "meta.policy",
  "description": "Aggregates all code quality, layout, naming, and capability standards. This meta-policy references modular sub-policies organized by domain.",
  "owners": {
    "accountable": "Governance Lead",
    "responsible": [
      "Core Maintainer"
    ]
  },
  "review": {
    "frequency": "12 months"
  },
  "aggregates": [
    {
      "policy_id": "code.style",
      "path": ".intent/policies/code/style.json",
      "description": "Linting, formatting, and visual consistency"
    },
    {
      "policy_id": "code.layout",
      "path": ".intent/policies/code/layout.json",
      "description": "Module structure and import organization"
    },
    {
      "policy_id": "code.refactor",
      "path": ".intent/policies/code/refactor.json",
      "description": "Safe code restructuring requirements"
    },
    {
      "policy_id": "code.capabilities",
      "path": ".intent/policies/code/capabilities.json",
      "description": "Capability IDs, descriptions, and ownership"
    },
    {
      "policy_id": "code.symbols",
      "path": ".intent/policies/code/symbols.json",
      "description": "Public and private symbol handling"
    },
    {
      "policy_id": "code.naming",
      "path": ".intent/policies/code/naming.json",
      "description": "Naming conventions for code and intent files"
    },
    {
      "policy_id": "code.async",
      "path": ".intent/policies/code/async.json",
      "description": "Async event loop management"
    },
    {
      "policy_id": "code.logging",
      "path": ".intent/policies/code/logging.json",
      "description": "Centralized logging requirements"
    }
  ],
  "notes": [
    "This meta-policy maintains backward compatibility with the monolithic code_standards.json",
    "Each sub-policy is independently versioned and can be updated without affecting others",
    "IntentRepository should support loading aggregated policies via the 'aggregates' field"
  ],
  "rules": [
    {
      "id": "code_index.meta_aggregator",
      "statement": "This meta-policy aggregates sub-policies listed in the 'aggregates' field.",
      "enforcement": "info",
      "rationale": "Meta-policy aggregation marker",
      "check": {
        "engine": "llm_gate",
        "params": {}
      }
    }
  ]
}
