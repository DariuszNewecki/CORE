# .env

# --- Path Configuration ---
# These are typically not needed to be changed if running from the repo root.
CORE_ENV="development"
MIND=".intent"
BODY="src"
REPO_PATH="/opt/dev/CORE"
LOG_LEVEL="INFO"
CORE_ACTION_LOG_PATH="logs/action_log.jsonl"

# --- Dev fastpath (procedures relax, checks never relax) ---
CORE_DEV_FASTPATH="true"
CORE_DEV_KEY_PATH=".local/dev-approver.key"      # local-only; ignored by git
CORE_DEV_APPROVER_EMAIL="dev@local"              # used for auto-sign in dev

# -- Resource: deepseek_chat --
# Example for a local model server: http://localhost:11434/v1
DEEPSEEK_CHAT_API_URL="https://api.deepseek.com"
DEEPSEEK_CHAT_API_KEY="your_api_key_here"
DEEPSEEK_CHAT_MODEL_NAME="deepseek-chat"

# -- Resource: deepseek_coder --
# Example for a local model server: http://localhost:11434/v1
DEEPSEEK_CODER_API_URL="https://api.deepseek.com"
DEEPSEEK_CODER_API_KEY="your_api_key_here"
DEEPSEEK_CODER_MODEL_NAME="deepseek-coder"

# --- Feature Flags ---
# Set to "false" to run without external LLMs (e.g., local/offline dev).
# When disabled, clients won't be initialized at startup.
LLM_ENABLED="true"